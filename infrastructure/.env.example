# Azure Resource Configuration
RESOURCE_GROUP=your-resource-group
LOCATION=japaneast

# GitHub Configuration (OIDC認証用)
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_REPO_OWNER=your-github-username
GITHUB_REPO_NAME=your-repo-name

# Application Configuration
APP_NAME=myapp
APP_SERVICE_PLAN_SKU=B1

# OIDC認証設定
# 注意: この値はmain.parameters.jsonのgithubEnvironmentパラメーターと一致する必要があります
GITHUB_ENVIRONMENT=production

# X OAuth 2.0 Configuration
X_CLIENT_ID=your-x-client-id
X_CLIENT_SECRET=your-x-client-secret
X_REDIRECT_URI=https://your-app-name-webapp.azurewebsites.net/callback

# ===== Firebase/Firestore 設定 (Task 3) =====

# Firebase プロジェクトID（必須）
FIREBASE_PROJECT_ID=your_firebase_project_id
FIRESTORE_REGION=asia-northeast1
FIREBASE_SERVICE_ACCOUNT_BASE64=your_base64_encoded_service_account_json
ENCRYPTION_KEY=your_fernet_encryption_key_here
